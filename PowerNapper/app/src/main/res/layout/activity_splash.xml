<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/splash_layout"
    android:background="@android:color/black"
    tools:context="com.powernapper.SplashActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:layout_above="@+id/powernapper_img"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/timelayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/time_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2h"
                android:textColor="@color/blue_super_dark"
                android:textStyle="bold"
                android:gravity="center"
                />
            <ProgressBar
                android:id="@+id/pb4"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/blue_super_dark"
                android:indeterminateTintMode="src_in"
                android:indeterminateDrawable="@drawable/my_progress_indeterminate"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/timelayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/time_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15m"
                android:textColor="@color/blue_super_light"
                android:textStyle="bold"
                android:gravity="center"
                />
            <ProgressBar
                android:id="@+id/pb1"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/blue_super_light"
                android:indeterminateTintMode="src_in"
                android:indeterminateDrawable="@drawable/my_progress_indeterminate"/>
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/powernapper_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@drawable/powernapper_icon_blue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:layout_below="@+id/powernapper_img"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/timelayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/time_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1h"
                android:textColor="@color/blue_dark"
                android:textStyle="bold"
                android:gravity="center"
                />
            <ProgressBar
                android:id="@+id/pb3"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/blue_dark"
                android:indeterminateTintMode="src_in"
                android:indeterminateDrawable="@drawable/my_progress_indeterminate"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/timelayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/time_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30m"
                android:textColor="@color/blue_light"
                android:textStyle="bold"
                android:gravity="center"
                />
            <ProgressBar
                android:id="@+id/pb2"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/blue_light"
                android:indeterminateTintMode="src_in"
                android:indeterminateDrawable="@drawable/my_progress_indeterminate"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/editlayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:orientation="horizontal">
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:textColor="#000493"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="50dp"
        android:text="Click on power nap length time to change"/>

</RelativeLayout>
