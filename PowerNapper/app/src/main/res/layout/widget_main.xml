<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WidgetProvider"
    android:transitionGroup="true">


    <TextView
        android:id="@+id/textView"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HELLO"
        android:textSize="15dp"
        android:visibility="gone"
        android:textColor="@android:color/black"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/updateWidgetIDTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="PowNap"/>

            <ProgressBar
                android:id="@+id/updateWidgetID"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:layout_centerInParent="true"

                android:indeterminate="true"
                android:indeterminateTint="@android:color/black"
                android:indeterminateTintMode="src_in"
                android:indeterminateDrawable="@drawable/my_progress_indeterminate"/>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/view_container"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <!-- New views will be added here at runtime -->


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/quarterWidgetIDTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:text="15 Min"/>

                <ProgressBar
                    android:id="@+id/quarterWidgetID"
                    android:layout_height="50dp"
                    android:layout_width="60dp"
                    android:layout_centerInParent="true"
                    android:progress="0"
                    android:rotation="45"

                    android:indeterminate="true"
                    android:indeterminateTint="@color/colorAccent"
                    android:indeterminateTintMode="src_in"
                    android:indeterminateDrawable="@drawable/my_progress_indeterminate"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/halfWidgetIDTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:text="30 Min"/>

                <ProgressBar
                    android:id="@+id/halfWidgetID"
                    android:layout_height="50dp"
                    android:layout_width="60dp"
                    android:layout_centerInParent="true"
                    android:progress="25"
                    android:rotation="90"

                    android:indeterminate="true"
                    android:indeterminateTint="@color/colorPrimaryDark"
                    android:indeterminateTintMode="src_in"
                    android:indeterminateDrawable="@drawable/my_progress_indeterminate"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/oneWidgetIDTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold"
                    android:text="1 Hour"/>

                <ProgressBar
                    android:id="@+id/oneWidgetID"
                    android:layout_height="50dp"
                    android:layout_width="60dp"
                    android:layout_centerInParent="true"
                    android:progress="50"
                    android:rotation="135"

                    android:indeterminate="true"
                    android:indeterminateTint="@android:color/holo_green_dark"
                    android:indeterminateTintMode="src_in"
                    android:indeterminateDrawable="@drawable/my_progress_indeterminate"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/twoWidgetIDTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_orange_light"
                    android:textStyle="bold"
                    android:text="2 Hours"/>

                <ProgressBar
                    android:id="@+id/twoWidgetID"
                    android:layout_height="50dp"
                    android:layout_width="60dp"
                    android:layout_centerInParent="true"
                    android:progress="75"
                    android:rotation="180"

                    android:indeterminate="true"
                    android:indeterminateTint="@android:color/holo_orange_light"
                    android:indeterminateTintMode="src_in"
                    android:indeterminateDrawable="@drawable/my_progress_indeterminate"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>